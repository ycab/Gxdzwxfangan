            function changecode() {
                time_lock = "1";//时间锁
                $("#get-code").html("60秒重新获取").css({ "color": "#fff", "background-color": "#ccc " });
                var endtime = 60;
                var sa = setInterval(function () {
                    endtime = endtime.toString().substr(0, 2);
                    --endtime;
                    $(".get-code").html(endtime + '秒重新获取');

                    $("#timeend").val(endtime);
                    if (endtime == 0) {
                        time_lock = "0";//时间解锁
                        clearInterval(sa);
                        $(".get-code").css("background-color", " #1CBB7F");
                        $(".get-code").html("获取验证码");
                    }
                }, 1000);
            }
