                    //}
                    //else if (data.send_flag == "4") {
                    //    data.receive_flag = "已完成";
                    //}
                    
                    var sortinfo = data.sortinfo;
                    var domli = "";
                    for (var i = 0; i < sortinfo.length; i++) {
                        if (sortinfo[i].IS_ACCEPTED == "0") {
                            sortinfo[i].IS_ACCEPTED = "申请中";
                        }
                        else if (sortinfo[i].IS_ACCEPTED == "1") {
                            sortinfo[i].IS_ACCEPTED = "竞标成功";
                        }
                        else if (sortinfo[i].IS_ACCEPTED == "2") {
                            sortinfo[i].IS_ACCEPTED = "竞标失败";
                        }
                        else if (sortinfo[i].IS_ACCEPTED == "3") {
                            sortinfo[i].IS_ACCEPTED = "托管中";
                        }
                        else if (sortinfo[i].IS_ACCEPTED == "4") {
                            sortinfo[i].IS_ACCEPTED = "已完成";
                        }
