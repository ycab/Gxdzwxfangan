    <script type="text/javascript">
        //设置cookie
        function setCookie(cname, cvalue, exdays) {
            var d = new Date();
            d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
            var expires = "expires=" + d.toUTCString();
            document.cookie = cname + "=" + cvalue + "; " + expires;
        }
        function clearHistroy() {
            setCookie('ECS[keywords]', '', -1);
            document.getElementById("search_histroy").style.visibility = "hidden";
        }
    </script>

    <script type="text/javascript">
     $(document).ready(function () {
        var a = "a";
        var myinfo = {
            name: a
        }
        var url = '@Url.Content("~/Home/GetSomeTask")';
        $.ajax({
            type: 'post',
            url: url,
            dataType: "json",
            data: myinfo,
            success: function (data) {
                if (data.msg == "success") {
                    var info = data.middlesortinfo;//middleinfo是整个信息
                    // $("#showgoods").html("");
                    var domli = "";
                    for (var j = 0; j < info.length; j++) {

                        if (info[j].IS_RECEIVED == "1") {
                            info[j].IS_RECEIVED = "竞标中";
                        }
                        else if (info[j].IS_RECEIVED == "2") {
                            info[j].IS_RECEIVED = "竞标成功";
                        }
                        else if (info[j].IS_RECEIVED == "3") {
                            info[j].IS_RECEIVED = "托管中";
                        }
                        else if (info[j].IS_RECEIVED == "4") {
                            info[j].IS_RECEIVED = "已完成";
                        }
                        domli += '<a onclick="javascript:task_list(\'' + info[j].TASK_ID + '\');">'
                            +'<li style="font-size:15px">'
                                + '<div class="middle" style="width:auto;margin-left:10px "><h4>' + info[j].TASK_NAME + '</h4><span style="font-size:15px">' + info[j].SEND_TIME + '</span></div>'
                                + '<p class="right" style="margin-right:10px;">￥' + info[j].PRICE + '<br>申请：' + info[j].APPLY_NUMBER + info[j].IS_RECEIVED + '</p>'
                            +'</li>'
                        +'</a>'
                    }
                    //domli+="</ul>"
                    $("#showgoods").append(domli);



                }
                else {
                    $('#loading').hide();
                }
            },
            error: function () {
                alert("error");
            }
        });
    });
        function task_list(task_id) {


            window.location.href = rootUrl + "Home/GxfaWxPlanDetail?task_id=" + task_id + "&random=" + Math.floor(Math.random() * (100000 + 1));
        }
    </script>

