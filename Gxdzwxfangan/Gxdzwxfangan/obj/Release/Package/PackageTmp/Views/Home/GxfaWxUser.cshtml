    <script type="text/javascript">
        $(document).ready(function () {
          
            $("#send_selected").html("0");
            var a=$("#send_selected").html();
            var myinfo = {
                name:a
            }
            var url = '@Url.Content("~/Home/MyTaskInfo")';
            $.ajax({
                type: 'post',
                url: url,
                dataType:"json",
                data: myinfo,
                success: function (data) {
                    $("#send_selected").html(data.SendTaskSelected);
                    $("#send_hosting").html(data.SendTaskHosting);
                    $("#send_finished").html(data.SendTaskFinished);
                    $("#receive_selected").html(data.ReceiveTaskSelected);
                    $("#receive_hosting").html(data.ReceiveTaskHosting);
                    $("#receive_finished").html(data.ReceiveTaskFinished);
                },
                error: function () {
                    alert("error");
                }
            });
        });
